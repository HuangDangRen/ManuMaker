                  </AnchorPane>
            </content>
          </TitledPane>
          <TitledPane fx:id="TP_Tools" expanded="false" text="Tools">
            <content>
              <AnchorPane minHeight="0.0" minWidth="0.0" prefHeight="180.0" prefWidth="200.0">
                     <children>
                        <TextArea fx:id="TA_ToolTags" layoutX="27.0" onKeyReleased="#handleToolsText" promptText="List the Tools required for this step, use a semicolon (&quot;;&quot;) after each tag.... " wrapText="true" AnchorPane.bottomAnchor="0.0" AnchorPane.leftAnchor="0.0" AnchorPane.rightAnchor="0.0" AnchorPane.topAnchor="0.0" />
                     </children>
                  </AnchorPane>
            </content>
          </TitledPane>
          <TitledPane fx:id="TP_Parts" expanded="false" text="Parts">
            <content>
              <AnchorPane minHeight="0.0" minWidth="0.0">
                     <children>
                        <TextArea fx:id="TA_PartTags" onKeyReleased="#handlePartsText" prefHeight="200.0" prefWidth="280.0" promptText="List the product components required for this step, use a semicolon (&quot;;&quot;) after each tag.... " wrapText="true" AnchorPane.bottomAnchor="0.0" AnchorPane.leftAnchor="0.0" AnchorPane.rightAnchor="0.0" AnchorPane.topAnchor="0.0" />
                     </children>
                  </AnchorPane>
            </content>
          </TitledPane>
        </panes>
      </Accordion>
   </children>
</AnchorPane>
